			<MarketValue>225</MarketValue>
			<WorkToMake>2900</WorkToMake>
			<AccuracyTouch>0.96</AccuracyTouch>
			<AccuracyShort>0.88</AccuracyShort>
			<AccuracyMedium>0.64</AccuracyMedium>
			<AccuracyLong>0.41</AccuracyLong>
