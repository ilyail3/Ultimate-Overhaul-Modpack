						<li>AvengerShell</li>
						<li>TurretEMPGrenades</li>
						<li>Powder</li>
						<li>AvengerShell</li>
						<li>ChainShell</li>
						<li>Plasteel</li>
						<li>RawCotton</li>
						<li>RawDevilstrand</li>
						<li>RawHops</li>
						<li>WoodPlank</li>
						<li>SteelBar</li>
						<li>PlasteelBar</li>
						<li>Glass</li>
						<li>Mulch</li>
						<li>Sand</li>
						<li>Gravel</li>
						<li>Electronics</li>
						<li>Biomatter</li>
						<li>ArtilleryShell</li>
						</exceptedThingDefs>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>Manufactured</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
