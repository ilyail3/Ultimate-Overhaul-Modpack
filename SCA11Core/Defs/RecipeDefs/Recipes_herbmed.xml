<RecipeDef>
	<defName>Makeherbmeds</defName>
	<label>make aloe</label>
	<description>Turns raw Xerigium into Aloe.</description>
	<jobString>Mixing Herbs.</jobString>
	<workSpeedStat>MedicalOperationSpeed</workSpeedStat>
	<workAmount>800</workAmount>
		<effectWorking>Surgery</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>          
	<allowMixingIngredients>true</allowMixingIngredients>
	<recipeUsers>
         <li>TableChemlab</li>
      </recipeUsers>
	<ingredients>
	<li>
	    <filter>
	      <thingDefs>
	        <li>RawXerigium</li>
	      </thingDefs>
	    </filter>
	    <count>10</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	   <thingDefs>
	    <li>RawXerigium</li>
	   </thingDefs>
	</fixedIngredientFilter>
	<products>
	  <aloe>10</aloe>
	</products>
	<workSkill>Medicine</workSkill>
</RecipeDef>

